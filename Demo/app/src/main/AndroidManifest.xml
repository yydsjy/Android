<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mikeyyds.library.app">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Mikelibrary">
        <activity
            android:name=".mike_navigation.MikeNavActivity"
            android:label="@string/title_activity_mike_nav"></activity>
        <activity android:name=".demo.item.MikeItemDemoActivity" />
        <activity android:name=".fragment.MikeFragmentActivity" />
        <activity android:name=".TestActivity" />
        <activity android:name=".demo.banner.MikeBannerDemoActivity" />
        <activity android:name=".demo.refresh.MikeRefreshDemoActivity" />
        <activity android:name=".demo.tab.MikeTabTopDemoActivity" />
        <activity
            android:name=".demo.tab.MikeTabBottomDemoActivity"
            android:theme="@style/Theme.Mikelibrary.NoActionBar" />
        <activity android:name=".demo.log.MikeLogDemoActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>